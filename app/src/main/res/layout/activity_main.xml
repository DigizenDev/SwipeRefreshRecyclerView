<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToolBar" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_toolbar_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自带主色" />

            <RadioButton
                android:id="@+id/rb_toolbar_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义" />

        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb_status_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StatusBar" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_status_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="透明" />

            <RadioButton
                android:id="@+id/rb_status_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白色" />

            <RadioButton
                android:id="@+id/rb_status_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主色" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>